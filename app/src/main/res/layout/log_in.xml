<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/arenaplaya">

    <Button
        android:id="@+id/BtnRegistrar"
        android:layout_width="270dp"
        android:layout_height="69dp"
        android:background="@drawable/listviewredondo"
        android:shadowColor="@color/colorPrimary"
        android:text="SIGN IN"
        android:fontFamily="@font/verdana"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.428"
         />

    <Button
        android:id="@+id/BtnLogin"
        android:layout_width="270dp"
        android:layout_height="69dp"
        android:background="@drawable/listviewredondo"
        android:fontFamily="@font/verdana"
        android:shadowColor="@color/colorPrimary"
        android:text="LOG IN"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.152"
         />

    <TextView
        android:id="@+id/mytitle"
        android:layout_width="322dp"
        android:layout_height="82dp"
        android:layout_marginStart="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/dayslater"
        android:text="NARWASH"
        android:textColor="#B25817"
        android:textSize="69dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="270dp"
        android:layout_height="131dp"

        android:background="@drawable/listviewredondo"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.293">

        <EditText
            android:id="@+id/TxtEmail"
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:fontFamily="@font/verdana"
            android:hint="email"
            android:inputType="textPersonName"
            android:text="alex@gmail.com"
            android:textColorHighlight="#B45F04"
            android:textColorHint="#0D93B2"
            android:textSize="25dp"
            app:layout_constraintBottom_toTopOf="@+id/TxtPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mytitle"
            app:layout_constraintVertical_bias="1.0"
            tools:text="@string/enter_email" />

        <EditText
            android:id="@+id/TxtPassword"
            android:layout_width="244dp"
            android:layout_height="46dp"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:fontFamily="@font/verdana"
            android:hint="contraseÃ±a"
            android:inputType="textPassword"
            android:text="123456"
            android:textColorHint="#0D93B2"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="293dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/LogoImagen"
        android:layout_width="132dp"
        android:layout_height="92dp"
        android:layout_marginStart="108dp"
        android:layout_marginLeft="108dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

</android.support.constraint.ConstraintLayout>